@using ng_project.Entities;

@model Project;

@if (User.Identity.IsAuthenticated && Model.User.login == User.Identity.Name)
{
	<div class="row mb-lg-3 justify-content-end pr-3">
		<button type="button" class="btn btn-primary mr-2" data-toggle="modal" data-target="#addNews">
			Добавить Новость
		</button>
		@*<a class="" asp-area="" asp-controller="Project" asp-action="Add">
				<div class="btn btn-outline-dark btn-sm" style="cursor:pointer">Добавить новость<i class="ml-2 fa fa-sm fa-plus"></i></div>
			</a>*@
	</div>
	<div class="modal fade" id="addNews" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		@Html.Partial("Project/AddNewsPartial")
	</div>
}

@if (Model.News.Count == 0)
	{

		<div class="card flex-md-row mb-4 box-shadow h-md-250 p-3" style="height:100px;">
			<h1 class="display-4">Здесь пока нет новостей..</h1>
		</div>

	}
@foreach (var news in Model.News)
{
<div class="card flex-md-row mb-4 box-shadow h-md-250">
	<div class="card-body d-flex flex-column align-items-start">
		<strong class="d-inline-block mb-2 text-primary">World</strong>
		<h3 class="mb-0">
			<a class="text-dark" href="#">@(news.Title)</a>
		</h3>
		<div class="mb-1 text-muted">@(news.PublishDate.ToString("dd-MM-yyyy HH:mm"))</div>
		<p class="card-text mb-auto">@(news.Text)</p>
		@*<a href="#">Continue reading</a>*@
	</div>
	@if (news.NewsImage != null && news.NewsImage.Data != null)
	{
		<img style='width:100%; height:225px' src="data:image/jpeg;base64,@(Convert.ToBase64String(news.NewsImage.Data))" />
	}
