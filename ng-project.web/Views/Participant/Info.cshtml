@using ng_project.Entities;

@model Worker;

<link rel="stylesheet" href="~/css/User.css" />
@*asp-controller="Participant" asp-action="SendRequest" asp-route-id="@(Model.Id)"*@
<div class="container">

	<a class="btn btn-success" data-toggle="modal" data-target="#send-request">
		Пригласить в команду
	</a>
	<div class="row mt-3">
		<div class="col-6">
			<span>@(Model.User.FirstName)</span>
		</div>
		<div class="col-6">
			<span>@(Model.User.LastName)</span>
		</div>
	</div>
	<div class="row participant-skills">
		@foreach (var skill in Model.Skills)
		{
			<span class="participant-skill-item">
				@skill.Name
			</span>
		}
	</div>
</div>

<div class="modal fade" id="send-request" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	@Html.Partial("Participant/_SendRequest", Model)
</div>