@using System.Collections;
@using ng_project.Entities;
@using ng_project.Entities.Enum;

@model List<Participant>

@foreach(Roles role in Enum.GetValues(typeof(Roles)))
{
<div>
	
<div class="container-fluid">
	<div class="my-3 p-3 bg-white rounded shadow-sm">
		<h6 class="border-bottom border-gray pb-2 mb-0">@(role)</h6>
		@foreach (var participant in Model.Where(t => t.Roles == role))
		{
			<div class="media text-muted pt-3">
				<svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
				<div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
					<div class="d-flex justify-content-between align-items-center w-100">
						<strong class="text-gray-dark">@(participant.User.FirstName)</strong>
						<a asp-area="" asp-controller="Participant" asp-action="Index">Follow</a>
					</div>
					<span class="d-block"></span>
				</div>
			</div>
		}
		</div>
</div>
	
</div>
}

