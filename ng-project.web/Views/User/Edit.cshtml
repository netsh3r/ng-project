	function deleteSkill(index) {
		let position = ".skill_" + index;
		let id = $('input[name="Participant.Skills[' + index + '].Id"]').val();
		if (id !== undefined) {
			$.ajax({
				type: 'POST',
				url: '@Url.Action("RemoveSkill","Participant")',
