@using System.Collections;
@using ng_project.Entities;

@model Project
<div class="container mt-3">
	<h1 class="h3 mb-3 font-weight-normal text-center">Добавить проект</h1>
	<div class="d-flex justify-content-center">
		@using (Html.BeginForm("Add", "Project", FormMethod.Post))
		{
		<div>
			<div class="mb-3">
				@Html.LabelFor(m => m.Name)
				@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="mb-3">
				@Html.LabelFor(m => m.Description)
				@Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="mb-3">
				@Html.LabelFor(m => m.ShortDescription)
				@Html.EditorFor(m => m.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			
			
			<input type="submit" value="Сохранить" />
		</div>
		}
	</div>
</div>
			
